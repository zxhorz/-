<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
">

	<!-- 持久化JOB任务bean调度工厂 -->
	<bean id="schedulerFactoryBean"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<qualifier value="bwbScheduler" />
		<property name="applicationContextSchedulerContextKey" value="applicationContext" />
		<property name="configLocation" value="classpath:quartz.properties" />
		<property name="globalJobListeners">
			<array>
				<ref bean="jobListener" />
			</array>
		</property>
		<property name="globalTriggerListeners">
			<array>
				<ref bean="triggerListener" />
			</array>
		</property>
	</bean>

	<bean id="jobListener"
		class="com.hengtiansoft.bluemorpho.workbench.quartz.listener.BwbJobListener" />
	<bean id="triggerListener"
		class="com.hengtiansoft.bluemorpho.workbench.quartz.listener.BwbTriggerListener" />

	<!-- 非持久化JOB任务bean调度工厂 -->
	<bean id="unPersistSchedulerFactoryBean"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobFactory" ref="jobFactory" />
		<property name="applicationContextSchedulerContextKey" value="applicationContext" />
		<property name="triggers">
			<list>
				<ref bean="autoTagFeedbackJobTrigger" />
			</list>
		</property>
	</bean>

	<!-- tag feedback JOB -->
	<bean name="autoTagFeedbackJobDetail"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.hengtiansoft.bluemorpho.workbench.quartz.job.AutoTagFeedbackJob" />
		<property name="durability" value="true" />
	</bean>

	<!-- tag feedback JOB 任务调度 -->
	<bean id="autoTagFeedbackJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="autoTagFeedbackJobDetail" />
		<property name="startDelay" value="10000" />
		<property name="cronExpression" value="0 0 0 * * ?" />
		<!-- 每天凌晨12点触发一次 -->
	</bean>

	<bean id="jobFactory" class="com.hengtiansoft.bluemorpho.workbench.quartz.MyJobFactory"></bean>
</beans>